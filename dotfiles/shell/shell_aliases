#ls replacements
alias l='eza -l --color=always --icons=always --no-user --no-time' # Per defecte
alias lg='eza -l --color=always --icons=always --no-user --no-time --git' # Per defecte + git
alias la='eza -al --color=always --icons=always --group-directories-first'  # Tot
alias ld='eza -l --color=always --icons=always --group-directories-first --no-user --no-time'  # Dirs first
alias ldd='eza -al --color=always --icons=always --only-dirs --no-user --no-time'  # Dirs only
#alias lf='eza -al --color=always --icons=always --only-files --no-user --no-time'  # Files
alias lt='eza -aT --color=always --icons=always --group-directories-first --no-user --no-time' # Arbre
alias lm="eza --sort=size --icons=always -al --color=always --no-user --no-time" # Tot, ordenat per mida

