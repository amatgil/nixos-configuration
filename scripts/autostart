#/bin/bash


$HOME/scripts/moussens # Set mous sens
$HOME/scripts/initialDisplay # Set screens
$HOME/scripts/fehbg #Randomize bg
$HOME/scripts/remaps # Set rate at which spams and Caps -> Esc, Esc -> Null and keyboard layout
$HOME/scripts/drawingTablet # Lock drawing tablet to screen
xmousepasteblock & # Disable middle-click paste
nextcloud &

[ -z $(pgrep clipit) ] && clipit & # Thing that clipboard on systray
[ -z $(pgrep nm-applet) ] && nm-applet & # NetworkManager but on systray

LOGFILE="$HOME/.config/suckless/dwm/dwm.log"

[ -z $(pgrep dwm) ] && cp $HOME/.config/suckless/dwm/dwm.log $HOME/.config/suckless/dwm/lastest_dwm.log && truncate $HOME/.config/suckless/dwm/dwm.log --size 0 && $HOME/.config/suckless/dwm/dwm &> >(tee -a $LOGFILE)
